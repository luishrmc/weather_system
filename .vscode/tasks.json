{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Environment",
            "type": "shell",
            "command": "source ./.venv/bin/activate",
            "problemMatcher": []
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "python -m app.main",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Debug",
            "type": "shell",
            "command": "python -m debugpy --wait-for-client --listen 0.0.0.0:5678 -m app.main",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "logs: mosquitto",
            "type": "shell",
            "command": "docker logs -f mosquitto",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "logs: influxdb3-core",
            "type": "shell",
            "command": "docker logs -f influxdb3-core",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}